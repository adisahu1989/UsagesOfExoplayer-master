<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soon.karat.exoplayer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".simple_examples.MainActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".simple_examples.VideoPlayerActivity"
            android:theme="@style/PlayerActivityTheme"
            android:screenOrientation="landscape"/>
        <activity android:name=".simple_examples.VideoPlaylistActivity"
            android:theme="@style/PlayerActivityTheme"/>
        <activity android:name=".simple_examples.VideoClippingActivity"
            android:theme="@style/PlayerActivityTheme"/>
        <activity android:name=".simple_examples.VideoLoopingActivity"
            android:theme="@style/PlayerActivityTheme"/>
        <activity android:name=".complex_examples.ComplexActivity"/>

        <activity android:name=".complex_examples.PlayerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:launchMode="singleTop"
            android:theme="@style/PlayerActivityTheme"/>
        <activity android:name=".complex_examples.AdsActivity" />
    </application>

</manifest>